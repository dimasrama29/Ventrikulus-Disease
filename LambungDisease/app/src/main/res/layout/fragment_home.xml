<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_home"
    tools:context=".HomeFragment"
    android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="650dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#2354B3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/lambung" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/nama_app"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="#4A94A7"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgdiag"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                android:layout_marginTop="35dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/magnifyingglass" />

                            <Button
                                android:id="@+id/btdiag"
                                android:layout_width="170dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/colorPrimary"
                                android:text="@string/diagnosis"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_marginTop="35dp"
                                android:id="@+id/img_ridi"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                android:layout_marginLeft="2dp"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/info" />

                            <Button
                                android:id="@+id/btnridi"
                                android:layout_width="170dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="2dp"
                                android:background="@color/colorPrimary"
                                android:text="@string/btn_ridi"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        </LinearLayout>
                <LinearLayout
                    android:background="#4A94A7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/datapenyakit"
                        android:layout_width="380dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/colorPrimary">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/datapenyakit" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:text="DATA PENYAKIT"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
</RelativeLayout>
